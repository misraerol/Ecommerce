@using ECommerce.WEB.Areas.Admin.Model.DiscountKeyManagement
@model DiscountKeyCRUDModel
@{
    ViewBag.Title = "Kupon Güncelleme";
}


@using (Html.BeginForm("Update", "DiscountKey", FormMethod.Post, new { id = "UpdateDiscountKey" }))
{
    @Html.HiddenFor(s=> s.DiscountKeyId)
    <div class="col-lg-6 col-ml-12">
        <div class="row">
            <div class="col-12 mt-5">
                <div class="card">
                    <div class="card-body">
                        <h4 class="header-title">Kupon Ekleme</h4>
                        <div class="form-group">

                            @Html.LabelFor(s => s.Count, new { @class = "col-form-label" })
                            @Html.TextBoxFor(s => s.Count, new { @class = "form-control", min = "1", max = "1000" })
                            @Html.ValidationMessageFor(s => s.Count)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(s => s.ExpiredDate, new { @class = "col-form-label" })
                            @Html.TextBoxFor(s => s.ExpiredDate, "{0:dd.MM.yyyy}", new { @class = "form-control datepicker" })
                            @Html.ValidationMessageFor(s => s.ExpiredDate)
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Kaydet" class="btn btn-success" />
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
}

@section Scripts{
    <script>
        Jform("#UpdateDiscountKey");
    </script>
}

