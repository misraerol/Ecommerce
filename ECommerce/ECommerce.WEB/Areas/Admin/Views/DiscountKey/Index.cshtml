@using ECommerce.WEB.Areas.Admin.Model.DiscountKeyManagement
@model List<DiscountKeyListViewModel>
@{
    ViewBag.Title = "Kupon Yönetimi";
}


<div class="main-content-inner">
    <div class="row">
        <!-- data table start -->
        <div class="col-12 mt-auto">
            <div class="card">
                <div class="card-body">
                    <h4 class="header-title">Kategori Yönetimi</h4>
                    <a href="@Url.Action("Insert","DiscountKey")" class="btn btn-primary float-right">Kupon Ekle</a>
                    <br />
                    <br />
                    <br />
                    <div class="data-tables">
                        <table id="dataTable" class="text-center">
                            <thead class="bg-light text-capitalize">
                                <tr>
                                    <th scope="col">Kupon Kodu</th>
                                    <th scope="col">Kupon Oranı</th>
                                    <th scope="col">Başlangıç Tarihi </th>
                                    <th scope="col">Bitiş Tarihi</th>
                                    <th scope="col">Düzenle</th>
                                    <th scope="col">Sil</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (DiscountKeyListViewModel discountKey in Model)
                                {
                                    <tr>
                                        <td>@discountKey.GuidKey</td>
                                        <td>@discountKey.Discount</td>
                                        <td>@discountKey.CretaDate</td>
                                        @if (discountKey.ExpiredDate != null)
                                        {
                                            <td>@discountKey.ExpiredDate.Value.ToShortDateString()</td>
                                        }
                                        else
                                        {
                                            <td>-</td>
                                        }
                                        <td>
                                            <ul class="d-flex justify-content-center">
                                                <li class="mr-3">
                                                    <a href="@Url.Action("Update", "DiscountKey", new {id=discountKey.DiscountKeyId})" class="text-secondary"><i class="fa fa-edit"></i></a>
                                                </li>
                                            </ul>
                                        </td>
                                        <td>
                                            <ul class="d-flex justify-content-center">
                                                <li><a href="@Url.Action("Delete", "DiscountKey", new {id=discountKey.DiscountKeyId})" class="text-danger"><i class="ti-trash"></i></a></li>
                                            </ul>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="@Url.Action("AllDelete","DiscountKey")" class="btn btn-primary float-right">Hepsini sil</a>
                    </div>
                </div>
            </div>
        </div>
        <!-- data table end -->
    </div>
</div>



