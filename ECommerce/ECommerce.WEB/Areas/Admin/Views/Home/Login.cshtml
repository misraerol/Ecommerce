@using ECommerce.WEB.Areas.Admin.Model.AdminUserManagement
@model AdminUserLoginCRUDModel
@{
    Layout = null;
}

<!doctype html>
<html class="no-js" lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Login - srtdash</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" type="image/png" href="~/Themes/AdminAssets/images/icon/favicon.ico">
    <link rel="stylesheet" href="~/Themes/AdminAssets/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Themes/AdminAssets/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/Themes/AdminAssets/css/themify-icons.css">
    <link rel="stylesheet" href="~/Themes/AdminAssets/css/metisMenu.css">
    <link rel="stylesheet" href="~/Themes/AdminAssets/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/Themes/AdminAssets/css/slicknav.min.css">
    <!-- amchart css -->
    <link rel="stylesheet" href="https://www.amcharts.com/lib/3/plugins/export/export.css" type="text/css" media="all" />
    <!-- others css -->
    <link rel="stylesheet" href="~/Themes/AdminAssets/css/typography.css">
    <link rel="stylesheet" href="~/Themes/AdminAssets/css/default-css.css">
    <link rel="stylesheet" href="~/Themes/AdminAssets/css/styles.css">
    <link rel="stylesheet" href="~/Themes/AdminAssets/css/responsive.css">
    <!-- modernizr css -->
    <script src="~/Themes/AdminAssets/js/vendor/modernizr-2.8.3.min.js"></script>
    <link href="~/Content/lib/swal/sweetalert2.css" rel="stylesheet" />

    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/jquery.bootstrapvalidator/0.5.2/css/bootstrapValidator.min.css" />
</head>

<body>
    <!--[if lt IE 8]>
            <p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
        <![endif]-->
    <!-- preloader area start -->
    <div id="preloader">
        <div class="loader"></div>
    </div>
    <!-- preloader area end -->
    <!-- login area start -->
    <div class="login-area login-bg">
        <div class="container">
            <div class="login-box ptb--100">
                @using (Html.BeginForm("Login", "Home", FormMethod.Post, new { id = "LoginForm" }))
                {
                    <div class="login-form-head">
                        <h4>Giriş Yap</h4>
                    </div>
                    <div class="login-form-body">
                        <div class="form-gp">
                            @Html.LabelFor(s=> s.Email, new { @class ="col-form-label"})
                            @Html.TextBoxFor(s => s.Email, new { type = "email"})
                            @Html.ValidationMessageFor(s=>s.Email)
                        </div>
                        <div class="form-gp">
                            @Html.LabelFor(s => s.Password, new { @class = "col-form-label" })
                            @Html.TextBoxFor(s => s.Password, new { @class = "form-control", type = "password" })
                            @Html.ValidationMessageFor(s => s.Password)
                        </div>
                        <div class="row mb-4 rmber-area">
                            <div class="col-6">
                                <div class="custom-control custom-checkbox mr-sm-2">
                                    @Html.CheckBoxFor(s => s.IsRemember, new { @class = "custom-control-input" })
                                    @Html.LabelFor(s => s.IsRemember, new { @class = "custom-control-label" })
                                    @Html.ValidationMessageFor(s => s.IsRemember)
                                </div>
                            </div>
                            <div class="col-6 text-right">
                                <a href="#">Şifremi Unuttum</a>
                            </div>
                        </div>
                        <div class="submit-btn-area">
                            <button id="form_submit" type="submit">Giriş Yap <i class="ti-arrow-right"></i></button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <!-- login area end -->
    <!-- jquery latest version -->
    <script src="~/Themes/AdminAssets/js/vendor/jquery-2.2.4.min.js"></script>
    <!-- bootstrap 4 js -->
    <script src="~/Themes/AdminAssets/js/popper.min.js"></script>
    <script src="~/Themes/AdminAssets/js/bootstrap.min.js"></script>
    <script src="~/Themes/AdminAssets/js/owl.carousel.min.js"></script>
    <script src="~/Themes/AdminAssets/js/metisMenu.min.js"></script>
    <script src="~/Themes/AdminAssets/js/jquery.slimscroll.min.js"></script>
    <script src="~/Themes/AdminAssets/js/jquery.slicknav.min.js"></script>

    <!-- others plugins -->
    <script src="~/Themes/AdminAssets/js/plugins.js"></script>
    <script src="~/Themes/AdminAssets/js/scripts.js"></script>
    <script src="~/Content/lib/swal/sweetalert2.js"></script>
    <script src="~/Content/js/EcommerceCustom.js"></script>
    <script src="~/Content/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/Content/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

    <script>
        Jform('#LoginForm');
    </script>
</body>

</html>