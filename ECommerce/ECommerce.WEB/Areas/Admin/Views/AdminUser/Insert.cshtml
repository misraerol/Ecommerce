@model ECommerce.WEB.Areas.Admin.Model.AdminUserManagement.AdminUserCRUDModel
@{
    ViewBag.Title = "Admin Oluştur";
}

@using (Html.BeginForm("Insert", "AdminUser", FormMethod.Post, new { id = "InsertAdminUser" }))
{
  
    <div class="col-lg-6 col-ml-12">
        <div class="row">
            <div class="col-12 mt-5">
                <div class="card">
                    <div class="card-body">
                        <h4 class="header-title">Admin Kaydı oluştur</h4>
                        <div class="form-group">
                            @Html.LabelFor(s => s.Email, new { @class = "col-form-label" })
                            @Html.TextBoxFor(s => s.Email, new { @class = "form-control" })
                            @Html.ValidationMessageFor(s=>s.Email)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(s => s.Password, new { @class = "col-form-label" })
                            @Html.PasswordFor(s => s.Password, new { @class = "form-control" })
                            @Html.ValidationMessageFor(s => s.Password)
                        </div>

                        <div class="form-group">
                            <input type="submit" value="Kaydet"  class="btn btn-success"/>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
}

@section Scripts{

   <script>
       Jform("#InsertAdminUser");
    </script>

}