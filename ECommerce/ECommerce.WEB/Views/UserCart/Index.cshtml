@using ECommerce.WEB.Models.UserCartManagamenet
@model List<UserCartModel>
@{
    ViewBag.Title = "Index";

    int totalCount = 0;
    decimal totalAmount = 0;
}

<!-- breadcrumb start -->
<section class="breadcrumb-section section-b-space">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="page-title">
                    <h2>SEPETİM</h2>
                </div>
            </div>
            <div class="col-12">
                <nav aria-label="breadcrumb" class="theme-breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="@Url.Action("IndexProductStoreWindow","Product")">Anasayfa</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Sepetim</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</section>
<!-- breadcrumb End -->
<!--section start-->
<section class="cart-section section-b-space">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <table class="table cart-table table-responsive-xs striped-table">
                    <thead>
                        <tr class="table-head">
                            <th scope="col">RESİM</th>
                            <th scope="col">ÜRÜN ADI</th>
                            <th scope="col">FİYAT</th>
                            <th scope="col">ADET</th>
                            <th scope="col">Sİl</th>
                            <th scope="col">Toplam</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (UserCartModel userCart in Model)
                        {
                            <tr>
                                <td>
                                    <a href="#"><img src="~/Uploads/ProductImage/@userCart.ImagePath" alt=""></a>
                                </td>
                                <td>
                                    <a href="#">@userCart.ProductName</a>
                                    <div class="mobile-cart-content row">
                                        <div class="col-xs-3">
                                            <div class="qty-box">

                                            </div>
                                        </div>
                                        <div class="col-xs-3">
                                            <h2 class="td-color">@userCart.Amount</h2>
                                        </div>
                                        <div class="col-xs-3">
                                            <h2 class="td-color"><a href="@Url.Action("Delete","UserCart")" class="icon"><i class="ti-close"></i></a></h2>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <h2>@userCart.Amount</h2>
                                </td>
                                <td>
                                    <div class="qty-box">
                                        <div class="input-group ">
                                            <span class="input-group-prepend form-control">
                                                <a href="@Url.Action("Decrease","UserCart",new {userCartId=userCart.UserCartId })" class="btn quantity-left-minus"><i class="ti-angle-left"></i></a>
                                            </span>
                                            <span class="form-control">@userCart.ProductCount</span>
                                            <span class="input-group-prepend form-control">
                                                <a href="@Url.Action("Increase","UserCart",new {userCartId=userCart.UserCartId})" class="btn quantity-right-plus"><i class="ti-angle-right"></i></a>
                                            </span>
                                        </div>
                                    </div>
                                <td><a href="@Url.Action("Delete","UserCart",new {userCartId=userCart.UserCartId})" class="icon"><i class="ti-close"></i></a></td>
                                <td>
                                    <h2 class="td-color">@string.Format("{0:F2}", (userCart.Amount * userCart.ProductCount))</h2>
                                </td>
                            </tr>
                            {
                                totalCount += userCart.ProductCount;
                                totalAmount += userCart.Amount * userCart.ProductCount;
                            }
                        }

                    </tbody>

                </table>
                <table class="table cart-table table-responsive-md">
                    <tfoot>
                        <tr>
                            <td>
                                Sipariş Özeti:
                            </td>
                            <td>
                                <h2>@string.Format("{0:F2}", totalAmount)</h2>
                            </td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
        <div class="row cart-buttons">
            <div class="col-6"><a href="@Url.Action("IndexProductStoreWindow","Product")" class="btn btn-solid">ALışverişe Devam et</a></div>
            <div class="col-6"><a href="#" class="btn btn-solid">Siparişi Tamamla</a></div>
        </div>
    </div>
</section>
<!--section end-->
